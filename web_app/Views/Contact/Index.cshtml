<!-- the view expects a `ContactDto` model -->
@model ContactDto

@{
    // Sets the title of the page, which is used in the layout.cshtml
    ViewData["Title"] = "Contact Page";
}
<div class="row">
    <div class="col-lg-9 mx-auto rounded border p-4">
        <h2 class="text-center mb-3">Contact Form</h2>

        <div class="row mb-3">
            <div class="col-sm-4">Email:</div>
            <div class="col-sm-8">@ViewData["ContactEmail"]</div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-4">Address:</div>
            <div class="col-sm-8">@ViewBag.ContactAddress</div>
        </div>

        <br>

        
        @if (ViewBag.ContactSuccessMessage != null)
        {
            // display sucess alert if ViewBag.ContactSuccessMessage != null
            
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@ViewBag.ContactSuccessMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss='alert' aria-label="Close"></button>
            </div>
        }


        <form method="post">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">First Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="FirstName">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Last Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="LastName">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-lable">Message</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Message">
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-8">
                    <button type="submit" class="btn btn-primary ">Submit</button>
                </div>
            </div>

        </form>
    </div>
</div>
